<!--<?xml version="1.0" encoding="UTF-8"?>-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.AuthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewAccountServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.ViewAccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewAccountServlet</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.DeleteAccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <url-pattern>/deleteAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddAccountsServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.AddAccountsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddAccountsServlet</servlet-name>
        <url-pattern>/addAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReportByCategoryServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.ReportByCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReportByCategoryServlet</servlet-name>
        <url-pattern>/reportByCategory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTypeTransactionServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.AddTypeTransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddTypeTransactionServlet</servlet-name>
        <url-pattern>/addTypeTransaction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditTypeTransactionServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.EditTypeTransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditTypeTransactionServlet</servlet-name>
        <url-pattern>/editTypeTransaction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTypeTransactionCategoryServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.DeleteTypeTransactionCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteTypeTransactionCategoryServlet</servlet-name>
        <url-pattern>/deleteTypeTransaction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>ru.dzhenenko.web.TransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/newTransaction</url-pattern>
    </servlet-mapping>

</web-app>
